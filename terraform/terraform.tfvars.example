# Azure Configuration
resource_group_name = "rg-arif-platform-prod"
location           = "East US"
environment        = "prod"

# AKS Configuration
cluster_name    = "aks-arif-platform-prod"
node_count      = 3
min_node_count  = 2
max_node_count  = 10
node_vm_size    = "Standard_D4s_v3"

# Azure Container Registry
acr_name = "acrarifplatformprod"

# Azure SQL Database
sql_server_name    = "sql-arif-platform-prod"
sql_database_name  = "ArifPlatform"
sql_admin_username = "arifadmin"
sql_admin_password = "YourSecurePassword123!"

# Azure Cache for Redis
redis_name = "redis-arif-platform-prod"

# Azure Key Vault
key_vault_name = "kv-arif-platform-prod"

# Security
jwt_secret_key = "your-super-secret-jwt-key-change-in-production-min-32-chars"

# Integration API Keys (set these to your actual values)
